@model  LoginModel
@{
    ViewData["Title"] = "Вход в программу";
    Layout = "_AdminLayout";
}

<div class="text-danger" asp-validation-summary="All"></div>
<form asp-action="Login" asp-controller="Account" method="post">
    <input type="hidden" asp-for="ReturnUrl" />
    <div class="form-group">
        <label asp-for="Name">Введите имя пользователя</label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Pwd">Пароль</label>
        <div><span asp-validation-for="Pwd" class="text-danger"></span></div>
        <input asp-for="Pwd" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Войти</button>
    </div>
    
</form>

