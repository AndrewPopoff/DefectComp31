@model AppUserEditModel

<h1>@ViewData["Title"]</h1>

@if (TempData["message"] != null)
{
    <div class="alert alert-warning">@TempData["message"]</div>
}
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="AppUser.Id" />
    <input type="hidden" asp-for="Page" />
    <input type="hidden" asp-for="Sort" />
    <input type="hidden" asp-for="ReturnUrl" />

    <div class="form-group">
        <label asp-for="AppUser.UserName">Имя пользователя</label>
        <div><span asp-validation-for="AppUser.UserName" class="text-danger"></span></div>
        <input asp-for="AppUser.UserName" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label for="password">Пароль</label>
        <input name="password" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Сохранить</button>
        <a class="btn btn-default" href="@Model.ReturnUrl">Отмена</a>
    </div>
</form>